<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="pointeger" translate="label" sortOrder="10">
            <label>Pointeger</label>
        </tab>
        <section id="namesection" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1"
                 showInStore="1">
<!--            <class>separator-top</class>-->
            <label>Add a new name</label>
            <tab>pointeger</tab>
            <resource>Magento_Catalog::config_catalog</resource>

            <group id="namegroup" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Add a new nick name</label>
                <field id="namefeild" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enter your name</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

        </section>
    </system>
</config>