<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="pointeger_student" resource="default" engine="innodb">
        <column xsi:type="smallint" name="entity_id" unsigned="true" nullable="false" identity="true" comment="student_id"/>
        <column xsi:type="varchar" name="name" nullable="false" />
        <column xsi:type="varchar" name="roll_no" nullable="false" />
        <column xsi:type="int" name="customer_id" nullable="false" unsigned="true"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="POINTEGER_STUDENT_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" table="pointeger_student" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id"/>

    </table>
</schema>



